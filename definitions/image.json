{
    "$id": "https://raw.githubusercontent.com/vinv-group/vinv-tree/main/definitions/image.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Image",
    "description": "A universal resource identifier (URI), according to RFC3986.",
    "type": ["object", "null"],
    "definition": "image",
    "required":[
        "base64"
    ],
    "properties":{
        "base64": {
            "title": "Image",
            "description": "A universal resource identifier (URI), according to RFC3986.",
            "type": "string",
            "contentEncoding": "base64",
            "contentMediaType": "image/jpeg",
            "examples":[
                "R0lGODdhAQABAPAAAP8AAAAAACwAAAAAAQABAAACAkQBADs="
            ]
        },
        "encoder": {
            "title": "Encoder",
            "description": "The encoder used to encode the image.",
            "type": ["string", "null"],
            "default": "image/webp",
            "enum": [
                "image/jpeg",
                "image/webp"
            ],
            "examples":[
                "image/webp",
                "image/jpeg"
            ]
        },
        "compression": {
            "title": "Compression",
            "description": "The compression used to encode the image.",
            "type": ["number", "null"],
            "minimum": 0,
            "maximum": 1,
            "default": 1,
            "examples":[
                0.8
            ]
        },
        "width": {
            "title": "Width",
            "description": "Width of the image.",
            "type": ["integer", "null"],
            "examples":[
                500
            ]
        },
        "height": {
            "title": "Height",
            "description": "Height of the image",
            "type": ["integer", "null"],
            "examples":[
                500
            ]
        }
    }
}