{
  "$id": "https://schema.vinv.io/vinv-sensors/0.0.1.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sensors",
  "description": "Tree definition",
  "type": "object",
  "required": [
    "location"
  ],
  "properties": {
    "location": {
      "$id": "https://schema.vinv.io/location/0.0.1.json",
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Location",
      "description": "",
      "type": "object",
      "vinv:id": "https://schema.vinv.io/location/0.0.1.json",
      "required": [
        "coordinates",
        "accuracy"
      ],
      "properties": {
        "coordinates": {
          "vinv:basics": "https://documentation.vinv.io/coordinates/0.0.1/0.html",
          "$id": "https://schema.vinv.io/coordinates/0.0.1.json",
          "$schema": "http://json-schema.org/draft-07/schema#",
          "title": "Coordinates",
          "description": "Anchor point of the Object on a map. Array of longitude, latitude and [altitude] coordinate. Reference system: WGS84 Web Mercator with longitude and latitude units of decimal degrees.",
          "type": "object",
          "required": [
            "longitude",
            "latitude"
          ],
          "additionalItems": false,
          "properties": {
            "longitude": {
              "title": "Longitude",
              "description": "The decimal east/west position of a point. (7 decimal places max)",
              "type": "number",
              "minimum": -180,
              "maximum": 180,
              "multipleOf": 1e-7,
              "examples": [
                -130.5627874,
                130.5627874
              ]
            },
            "latitude": {
              "title": "Latitude",
              "description": "The decimal north/south position of a point. (7 decimal places max)",
              "type": "number",
              "minimum": -90,
              "maximum": 90,
              "multipleOf": 1e-7,
              "examples": [
                -12.4563,
                50.5627874
              ]
            },
            "altitude": {
              "type": [
                "number",
                "null"
              ],
              "title": "Altitude",
              "description": "The altitude of the position in meters above mean sea level. (2 decimal places max)",
              "minimum": 0,
              "maximum": 2500,
              "multipleOf": 0.1,
              "vinv:unit": "Meter",
              "vinv:unitSymbol": "m",
              "examples": [
                0,
                130
              ]
            }
          }
        },
        "accuracy": {
          "title": "Accuracy",
          "description": "The decimal accuracy of coordinates in meter (2 decimal places max).",
          "type": "number",
          "minimum": 0,
          "maximum": 10000,
          "multipleOf": 0.1,
          "vinv:unit": "Meter",
          "vinv:unitSymbol": "m",
          "examples": [
            3,
            12
          ]
        },
        "geogrid": {
          "title": "Geo Grid",
          "description": "Geographical Aggregation Grid",
          "type": [
            "object",
            "null"
          ],
          "properties": {
            "h3": {
              "title": "h3-Location",
              "description": "Location of the event (h3 https://h3geo.org/)",
              "type": [
                "string",
                "null"
              ],
              "minLength": 15,
              "maxLength": 15,
              "examples": [
                "8428309ffffffff"
              ]
            },
            "geohash": {
              "title": "geohash-Location",
              "description": "Location of the event (geohash https://en.wikipedia.org/wiki/Geohash)",
              "type": [
                "string",
                "null"
              ],
              "minLength": 1,
              "maxLength": 12,
              "examples": [
                "ww8p1r4t8"
              ]
            }
          }
        }
      }
    },
    "settings": {
      "type": "object",
      "title": "Settings",
      "description": "Settings for the device orientation sensor.",
      "properties": {
        "frequency": {
          "title": "Frequency",
          "description": "The requested number of times per second the sensor should be sampled.",
          "type": "number",
          "minimum": 0,
          "maximum": 86400,
          "default": 60,
          "examples": [
            60
          ]
        }
      }
    },
    "sensor_data": {
      "type": "array",
      "title": "Device Orientation",
      "description": "The device orientation sensor provides information about the physical orientation of a hosting device. This data includes the rotation of the device around three axes in three-dimensional space.",
      "items": {
        "type": "object",
        "required": [
          "timestamp",
          "device_orientation"
        ],
        "properties": {
          "timestamp": {
            "title": "Timestamp",
            "description": "The time at which the data was retrieved, in milliseconds since the Unix epoch.",
            "type": "number",
            "minimum": 0,
            "default": 0,
            "examples": [
              0
            ],
            "readOnly": true
          },
          "device_orientation": {
            "$ref": "#/$defs/device_orientation"
          }
        }
      }
    }
  },
  "$defs": {
    "device_orientation": {
      "type": "object",
      "required": [
        "alpha",
        "beta",
        "gamma"
      ],
      "properties": {
        "alpha": {
          "title": "Alpha",
          "description": "The z-axis rotation of the device, in degrees, around the z-axis. This value represents the compass direction the device is facing.",
          "type": "number",
          "minimum": 0,
          "maximum": 360,
          "default": 0,
          "examples": [
            0
          ],
          "readOnly": true
        },
        "beta": {
          "title": "Beta",
          "description": "The x-axis rotation of the device, in degrees, around the x-axis. This value represents the front-to-back tilt of the device.",
          "type": "number",
          "minimum": -180,
          "maximum": 180,
          "default": 0,
          "examples": [
            0
          ]
        },
        "gamma": {
          "title": "Gamma",
          "description": "The y-axis rotation of the device, in degrees, around the y-axis. This value represents the left-to-right tilt of the device.",
          "type": "number",
          "minimum": -90,
          "maximum": 90,
          "default": 0,
          "examples": [
            0
          ]
        },
        "absolute": {
          "title": "Absolute",
          "description": "A boolean value that indicates whether the device's orientation is provided as relative to the Earth's coordinate system or as relative to the device's coordinate system.",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        }
      }
    }
  }
}