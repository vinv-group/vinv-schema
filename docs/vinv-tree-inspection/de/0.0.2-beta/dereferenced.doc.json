                false,
                true
              ]
            },
            "round_trunk_cross_section": {
              "title": "mit rundem Stammquerschnitt",
              "type": "boolean",
              "default": false,
              "examples": [
                false,
                true
              ]
            },
            "straight_trunk_axis": {
              "title": "mit gerader Stammachse",
              "type": "boolean",
              "default": false,
              "examples": [
                false,
                true
              ]
