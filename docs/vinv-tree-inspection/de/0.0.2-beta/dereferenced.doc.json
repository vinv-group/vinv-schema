{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$vinv": {
    "icon": "https://schema.vinv.io/assets/icons/nature_people_FILL0_wght400_GRAD0_opsz48.svg"
  },
  "title": "Baumkontrolle",
  "description": "Baumkontrolle nach Vorgaben der Bundesanstalt für Gewässerkunde (bfa)",
  "type": "object",
  "required": [
    "location",
    "base_data",
    "tree"
  ],
  "properties": {
    "location": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Location",
      "description": "",
      "type": "object",
      "required": [
        "coordinates",
        "accuracy"
      ],
      "properties": {
        "coordinates": {
          "$schema": "http://json-schema.org/draft-07/schema#",
          "title": "Coordinates",
          "description": "Anchor point of the Object on a map. Array of longitude, latitude and [altitude] coordinate. Reference system: WGS84 Web Mercator with longitude and latitude units of decimal degrees.",
          "type": "object",
          "required": [
            "longitude",
            "latitude"
          ],
          "additionalItems": false,
          "properties": {
            "longitude": {
              "title": "Longitude",
              "description": "The decimal east/west position of a point. (7 decimal places max)",
              "type": "number",
              "minimum": -180,
              "maximum": 180,
              "multipleOf": 1e-7,
              "examples": [
                -130.5627874,
                130.5627874
              ]
            },
            "latitude": {
              "title": "Latitude",
              "description": "The decimal north/south position of a point. (7 decimal places max)",
              "type": "number",
              "minimum": -90,
              "maximum": 90,
              "multipleOf": 1e-7,
              "examples": [
                -12.4563,
                50.5627874
              ]
            },
            "altitude": {
              "type": [
                "number",
                "null"
              ],
              "title": "Altitude",
              "description": "The altitude of the position in meters above mean sea level. (2 decimal places max)",
              "minimum": 0,
              "maximum": 2500,
              "multipleOf": 0.1,
              "examples": [
                0,
                130
              ],
              "$vinv": {
                "unit": "Meter",
                "unitSymbol": "m"
              }
            }
          },
          "$vinv": {
            "id": "https://schema.vinv.io/coordinates/0.0.1.json"
          }
        },
        "accuracy": {
          "title": "Accuracy",
          "description": "The decimal accuracy of coordinates in meter (2 decimal places max).",
          "type": "number",
          "minimum": 0,
          "maximum": 10000,
          "multipleOf": 0.1,
          "examples": [
            3,
            12
          ],
          "$vinv": {
            "unit": "Meter",
            "unitSymbol": "m"
          }
        },
        "geogrid": {
          "title": "Geo Grid",
          "description": "Geographical Aggregation Grid",
          "type": [
            "object",
            "null"
          ],
          "properties": {
            "h3": {
              "title": "h3-Location",
              "description": "Location of the event (h3 https://h3geo.org/)",
              "type": [
                "string",
                "null"
              ],
              "minLength": 15,
              "maxLength": 15,
              "examples": [
                "8428309ffffffff"
              ]
            },
            "geohash": {
              "title": "geohash-Location",
              "description": "Location of the event (geohash https://en.wikipedia.org/wiki/Geohash)",
              "type": [
                "string",
                "null"
              ],
              "minLength": 1,
              "maxLength": 12,
              "examples": [
                "ww8p1r4t8"
              ]
            }
          }
        }
      },
      "$vinv": {
        "id": "https://schema.vinv.io/location/en/0.0.1.json"
      }
    },
    "tree": {
      "title": "Baum Daten",
      "$schema": "http://json-schema.org/draft-07/schema#",
      "description": "Tree definition",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "species",
        "trunk"
      ],
      "properties": {
        "species": {
          "$schema": "http://json-schema.org/draft-07/schema#",
          "$vinv": {
            "id": "https://schema.vinv.io/species/en/0.0.2-beta.json",
            "enum": "https://schema.vinv.io/species/en/0.0.1.json"
          },
          "title": "Tree species",
          "description": "Tree Species values taken from https://github.com/b-lack/tree-species",
          "type": "string",
          "pattern": "^[a-zA-Z0-9_-]{3}$",
          "examples": [
            "JM2"
          ]
        },
        "trunk": {
          "type": "object",
          "title": "Trunk",
          "description": "Trunk definition",
          "required": [
            "dimensions"
          ],
          "properties": {
            "dimensions": {
              "title": "Dimensions",
              "description": "Diameter per height",
              "additionalProperties": false,
              "type": "array",
              "minItems": 2,
              "items": {
                "$schema": "http://json-schema.org/draft-07/schema#",
                "$vinv": {
                  "id": "https://schema.vinv.io/diameter_at_height/en/0.0.2-beta.json",
                  "idShort": "diameter_at_height",
                  "layout": "2grid"
                },
                "additionalProperties": false,
                "title": "Diameter at height",
                "description": "Array including height and diameter at height",
                "type": "object",
                "minItems": 2,
                "maxItems": 2,
                "additionalItems": false,
                "required": [
                  "height",
                  "diameter"
                ],
                "properties": {
                  "height": {
                    "title": "Height",
                    "description": "Height of measurment in METER where diameter is measured.",
                    "type": "number",
                    "minimum": 0,
                    "maximum": 100,
                    "multipleOf": 0.01,
                    "examples": [
                      0.5,
                      0.1
                    ],
                    "$vinv": {
                      "unit": "Meter",
                      "unitSymbol": "m"
                    }
                  },
                  "diameter": {
                    "title": "Diameter",
                    "description": "Diameter in CENTIMETER at measured height.",
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 5000,
                    "examples": [
                      304,
                      308
                    ],
                    "$vinv": {
                      "unit": "Centimeter",
                      "unitSymbol": "cm"
                    }
                  }
                }
              }
            },
            "image_trunk": {
              "title": "Image",
              "description": "Image of the trunk",
              "$schema": "http://json-schema.org/draft-07/schema#",
              "type": [
                "object",
                "null"
              ],
              "required": [
                "uri"
              ],
              "properties": {
                "uri": {
                  "title": "Image",
                  "description": "A universal resource identifier (URI), according to RFC3986.",
                  "type": "string",
                  "format": "uri",
                  "examples": [
                    "https://schema.vinv.io/asset/img/logo.png"
                  ]
                },
                "encoder": {
                  "title": "Encoder",
                  "description": "The encoder used to encode the image.",
                  "type": [
                    "string",
                    "null"
                  ],
                  "default": "image/webp",
                  "enum": [
                    "image/jpeg",
                    "image/webp"
                  ],
                  "examples": [
                    "image/webp",
                    "image/jpeg"
                  ]
                },
                "compression": {
                  "title": "Compression",
                  "description": "The compression used to encode the image.",
                  "type": [
                    "number",
                    "null"
                  ],
                  "minimum": 0,
                  "maximum": 1,
                  "default": 1,
                  "examples": [
                    0.8
                  ]
                },
                "width": {
                  "title": "Width",
                  "description": "Width of the image.",
                  "type": [
                    "integer",
                    "null"
                  ],
                  "minimum": 25,
                  "maximum": 10000,
                  "examples": [
                    500
                  ],
                  "$vinv": {
                    "unit": "Pixel",
                    "unitSymbol": "px"
                  }
                },
                "height": {
                  "title": "Height",
                  "description": "Height of the image",
                  "type": [
                    "integer",
                    "null"
                  ],
                  "minimum": 25,
                  "maximum": 10000,
                  "examples": [
                    500
                  ],
                  "$vinv": {
                    "unit": "Pixel",
                    "unitSymbol": "px"
                  }
                }
              },
              "$vinv": {
                "id": "https://schema.vinv.io/image/en/0.0.1.json"
              }
            }
          }
        },
        "crown": {
          "type": [
            "object",
            "null"
          ],
          "title": "Crown",
          "description": "Crown definition",
          "required": [
            "dimensions"
          ],
          "properties": {
            "dimensions": {
              "title": "Dimensions",
              "description": "Diameter per height",
              "$vinv": {
                "idShort": "diameter_at_height_array",
                "layout": "2grid"
              },
              "type": "array",
              "minItems": 2,
              "items": {
                "$schema": "http://json-schema.org/draft-07/schema#",
                "$vinv": {
                  "id": "https://schema.vinv.io/diameter_at_height/en/0.0.2-beta.json",
                  "idShort": "diameter_at_height",
                  "layout": "2grid"
                },
                "additionalProperties": false,
                "title": "Diameter at height",
                "description": "Array including height and diameter at height",
                "type": "object",
                "minItems": 2,
                "maxItems": 2,
                "additionalItems": false,
                "required": [
                  "height",
                  "diameter"
                ],
                "properties": {
                  "height": {
                    "title": "Height",
                    "description": "Height of measurment in METER where diameter is measured.",
                    "type": "number",
                    "minimum": 0,
                    "maximum": 100,
                    "multipleOf": 0.01,
                    "examples": [
                      0.5,
                      0.1
                    ],
                    "$vinv": {
                      "unit": "Meter",
                      "unitSymbol": "m"
                    }
                  },
                  "diameter": {
                    "title": "Diameter",
                    "description": "Diameter in CENTIMETER at measured height.",
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 5000,
                    "examples": [
                      304,
                      308
                    ],
                    "$vinv": {
                      "unit": "Centimeter",
                      "unitSymbol": "cm"
                    }
                  }
                }
              }
            },
            "image_crown": {
              "title": "Image of the trunk",
              "description": "Image of the trunk",
              "$schema": "http://json-schema.org/draft-07/schema#",
              "type": [
                "object",
                "null"
              ],
              "required": [
                "uri"
              ],
              "properties": {
                "uri": {
                  "title": "Image",
                  "description": "A universal resource identifier (URI), according to RFC3986.",
                  "type": "string",
                  "format": "uri",
                  "examples": [
                    "https://schema.vinv.io/asset/img/logo.png"
                  ]
                },
                "encoder": {
                  "title": "Encoder",
                  "description": "The encoder used to encode the image.",
                  "type": [
                    "string",
                    "null"
                  ],
                  "default": "image/webp",
                  "enum": [
                    "image/jpeg",
                    "image/webp"
                  ],
                  "examples": [
                    "image/webp",
                    "image/jpeg"
                  ]
                },
                "compression": {
                  "title": "Compression",
                  "description": "The compression used to encode the image.",
                  "type": [
                    "number",
                    "null"
                  ],
                  "minimum": 0,
                  "maximum": 1,
                  "default": 1,
                  "examples": [
                    0.8
                  ]
                },
                "width": {
                  "title": "Width",
                  "description": "Width of the image.",
                  "type": [
                    "integer",
                    "null"
                  ],
                  "minimum": 25,
                  "maximum": 10000,
                  "examples": [
                    500
                  ],
                  "$vinv": {
                    "unit": "Pixel",
                    "unitSymbol": "px"
                  }
                },
                "height": {
                  "title": "Height",
                  "description": "Height of the image",
                  "type": [
                    "integer",
                    "null"
                  ],
                  "minimum": 25,
                  "maximum": 10000,
                  "examples": [
                    500
                  ],
                  "$vinv": {
                    "unit": "Pixel",
                    "unitSymbol": "px"
                  }
                }
              },
              "$vinv": {
                "id": "https://schema.vinv.io/image/en/0.0.1.json"
              }
            }
          }
        },
        "birth": {
          "title": "Birthday",
          "description": "Birthday of the tree",
          "type": [
            "string",
            "null"
          ],
          "format": "date",
          "examples": [
            "2010-09-13"
          ]
        },
        "treeNumber": {
          "title": "Unique number",
          "description": "Number/ID of the tree",
          "type": "string",
          "maxLength": 26,
          "examples": [
            "#1",
            "45",
            "ASDF435gHDFGhsgj5646"
          ]
        }
      },
      "$vinv": {
        "id": "https://schema.vinv.io/tree/en/0.0.2-beta.json"
      }
    },
    "base_data": {
      "title": "Grunddaten",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "safety_expectation",
        "conservation_status",
        "development_phase",
        "exemption",
        "vitality"
      ],
      "properties": {
        "safety_expectation": {
          "title": "Berechtigte Sicherheitserwartung des Verkehrs",
          "type": "string",
          "default": "geringer",
          "enum": [
            "geringer",
            "höher"
          ],
          "examples": [
            "geringer",
            "höher"
          ]
        },
        "conservation_status": {
          "title": "Naturschutzstatus",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "development_phase": {
          "title": "Entwicklungsphase",
          "type": "string",
          "default": "Reifephase",
          "enum": [
            "Jugendphase",
            "Reifephase",
            "Alterungsphase"
          ],
          "examples": [
            "Jugendphase",
            "Reifephase",
            "Alterungsphase"
          ]
        },
        "exemption": {
          "title": "Freistellung",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "vitality": {
          "title": "Vitalitätsstufe",
          "type": "string",
          "default": "vital",
          "enum": [
            "vital",
            "leicht geschwächt",
            "geschwächt",
            "stark geschwächt"
          ],
          "examples": [
            "vital",
            "leicht geschwächt",
            "geschwächt",
            "stark geschwächt"
          ]
        }
      }
    },
    "root": {
      "title": "Wurzel",
      "description": "Root of the tree.",
      "type": "object",
      "required": [
        "raised_root_plate",
        "floor_cracks"
      ],
      "properties": {
        "raised_root_plate": {
          "title": "angehobener Wurzelteller",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "floor_cracks": {
          "title": "Bodenrisse",
          "description": "konzentrische Bodenrisse quer zur Wurzel (auch Wegedecken, Mauern usw.)",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "main_root_damage": {
          "title": "windseitige Hauptwurzelschäden",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "near_trunk_shafts": {
          "title": "stammnahe Schachtungen",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "backfill_root": {
          "title": "stammnahe Schachtungen",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "stilt_roots": {
          "title": "Stelzwurzeln",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "exposed_roots": {
          "title": "freigespülte Wurzeln",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "annotations": {
          "title": "Anmerkungen",
          "type": [
            "array",
            "null"
          ],
          "items": {
            "title": "Anmerkung",
            "type": "string",
            "maxLength": 255,
            "examples": [
              "Unterversorgtes Holzgewebe durch Behinderung oder Unterbrechung des Saftstroms."
            ]
          }
        }
      }
    },
    "trunk": {
      "title": "Stammfuß und Stamm ",
      "description": "trunk foot and trunk",
      "type": "object",
      "properties": {
        "misalignment": {
          "title": "Schiefstellung",
          "description": "akutes Kippen",
          "type": [
            "object",
            "null"
          ],
          "properties": {
            "shear_crack": {
              "title": "mit Schubriss",
              "type": "boolean",
              "default": false,
              "examples": [
                false,
                true
              ]
            },
            "naked_triangle": {
              "title": "mit nacktem Dreieck",
              "type": "boolean",
              "default": false,
