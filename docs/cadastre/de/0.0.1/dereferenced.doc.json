{
  "$id": "https://schema.vinv.io/cadastre/de/0.0.1.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Baumkontrolle",
  "description": "Tree cadastre",
  "type": "object",
  "required": [
    "base_data",
    "tree"
  ],
  "properties": {
    "base_data": {
      "title": "Grunddaten",
      "type": "object",
      "additionalProperties": false,
      "required": [
        "treeNumber",
        "safety_expectation"
      ],
      "properties": {
        "treeNumber": {
          "title": "Baumnummer",
          "description": "Tree number",
          "type": "string",
          "maxLength": 50,
          "examples": [
            "1",
            "2",
            "3"
          ]
        },
        "safety_expectation": {
          "title": "Berechtigte Sicherheitserwartung des Verkehrs",
          "type": "string",
          "default": "geringer",
          "enum": [
            "geringer",
            "höher"
          ],
          "examples": [
            "geringer",
            "höher"
          ]
        },
        "conservation_status": {
          "title": "Naturschutzstatus",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "development_phase": {
          "title": "Vitalitätsstufe",
          "type": "string",
          "default": "vital",
          "enum": [
            "Jugendphase",
            "Reifephase",
            "Alterungsphase"
          ],
          "examples": [
            "Jugendphase",
            "Reifephase",
            "Alterungsphase"
          ]
        }
      }
    },
    "tree": {
      "title": "Baum Daten",
      "description": "Tree definition",
      "type": "object",
      "required": [
        "location",
        "species",
        "dbh"
      ],
      "properties": {
        "location": {
          "title": "Location",
          "description": "",
          "type": "object",
          "vinv:id": "https://schema.vinv.io/location/0.0.1.json",
          "required": [
            "coordinates",
            "accuracy"
          ],
          "properties": {
            "coordinates": {
              "vinv:basics": "https://documentation.vinv.io/coordinates/0.0.1/0.html",
              "title": "Coordinates",
              "description": "Anchor point of the Object on a map. Array of longitude, latitude and [altitude] coordinate. Reference system: WGS84 Web Mercator with longitude and latitude units of decimal degrees.",
              "type": "object",
              "required": [
                "longitude",
                "latitude"
              ],
              "additionalItems": false,
              "properties": {
                "longitude": {
                  "title": "Longitude",
                  "description": "The decimal east/west position of a point. (7 decimal places max)",
                  "type": "number",
                  "minimum": -180,
                  "maximum": 180,
                  "multipleOf": 1e-7,
                  "examples": [
                    -130.5627874,
                    130.5627874
                  ]
                },
                "latitude": {
                  "title": "Latitude",
                  "description": "The decimal north/south position of a point. (7 decimal places max)",
                  "type": "number",
                  "minimum": -90,
                  "maximum": 90,
                  "multipleOf": 1e-7,
                  "examples": [
                    -12.4563,
                    50.5627874
                  ]
                },
                "altitude": {
                  "type": [
                    "number",
                    "null"
                  ],
                  "title": "Altitude",
                  "description": "The altitude of the position in meters above mean sea level. (2 decimal places max)",
                  "minimum": 0,
                  "maximum": 2500,
                  "multipleOf": 0.1,
                  "vinv:unit": "Meter",
                  "vinv:unitSymbol": "m",
                  "examples": [
                    0,
                    130
                  ]
                }
              }
            },
            "accuracy": {
              "title": "Accuracy",
              "description": "The decimal accuracy of coordinates in meter (2 decimal places max).",
              "type": "number",
              "minimum": 0,
              "maximum": 10000,
              "multipleOf": 0.1,
              "vinv:unit": "Meter",
              "vinv:unitSymbol": "m",
              "examples": [
                3,
                12
              ]
            },
            "geogrid": {
              "title": "Geo Grid",
              "description": "Geographical Aggregation Grid",
              "type": [
                "object",
                "null"
              ],
              "properties": {
                "h3": {
                  "title": "h3-Location",
                  "description": "Location of the event (h3 https://h3geo.org/)",
                  "type": [
                    "string",
                    "null"
                  ],
                  "minLength": 15,
                  "maxLength": 15,
                  "examples": [
                    "8428309ffffffff"
                  ]
                },
                "geohash": {
                  "title": "geohash-Location",
                  "description": "Location of the event (geohash https://en.wikipedia.org/wiki/Geohash)",
                  "type": [
                    "string",
                    "null"
                  ],
                  "minLength": 1,
                  "maxLength": 12,
                  "examples": [
                    "ww8p1r4t8"
                  ]
                }
              }
            }
          }
        },
        "species": {
          "title": "Tree species",
          "description": "Tree Species values taken from https://github.com/b-lack/tree-species",
          "type": "string",
          "pattern": "^[a-zA-Z0-9_-]{3}$",
          "examples": [
            "JM2"
          ],
          "vinv:enum": "https://schema.vinv.io/species/0.0.1.json"
        },
        "dbh": {
          "title": "Diameter at Breast Height",
          "description": "Diameter in centimeter",
          "type": "number",
          "minimum": 1,
          "maximum": 100,
          "multipleOf": 0.1,
          "examples": [
            34,
            56
          ],
          "vinv:unit": "Centimeter",
          "vinv:unitSymbol": "cm",
          "vinv:speech": true
        },
        "height": {
          "title": "Height",
          "description": "Height in Meter",
          "type": [
            "number",
            "null"
          ],
          "minimum": 0.5,
          "maximum": 99,
          "multipleOf": 0.1,
          "examples": [
            14,
            13.5,
            15.6
          ],
          "vinv:unit": "Meter",
          "vinv:unitSymbol": "m",
          "vinv:speech": true
        },
        "trunk": {
          "type": [
            "object",
            "null"
          ],
          "title": "Trunk",
          "description": "Trunk definition",
          "required": [
            "dimensions"
          ],
          "properties": {
            "dimensions": {
              "title": "Trunk Dimensions",
              "description": "Diameter per height",
              "type": "array",
              "items": {
                "title": "Diameter at height",
                "description": "Array including height and diameter at height",
                "type": [
                  "object",
                  "null"
                ],
                "minItems": 2,
                "maxItems": 2,
                "additionalItems": false,
                "required": [
                  "height",
                  "diameter"
                ],
                "properties": {
                  "height": {
                    "type": "number",
                    "title": "Height",
                    "description": "Height of tree in PERCENT where diameter is measured",
                    "minimum": 0.1,
                    "maximum": 1,
                    "examples": [
                      0.5,
                      0.1
                    ]
                  },
                  "diameter": {
                    "type": "number",
                    "title": "Diameter",
                    "description": "Diameter in CENTIMETER at measured height",
                    "minimum": 10,
                    "maximum": 100,
                    "examples": [
                      34,
                      38
                    ]
                  }
                }
              }
            },
            "image_trunk": {
              "title": "Image of the trunk",
              "description": "Image of the trunk",
              "type": [
                "object",
                "null"
              ],
              "vinv:id": "https://schema.vinv.io/image/0.0.1.json",
              "required": [
                "uri"
              ],
              "properties": {
                "uri": {
                  "title": "Image",
                  "description": "A universal resource identifier (URI), according to RFC3986.",
                  "type": "string",
                  "format": "uri",
                  "examples": [
                    "https://schema.vinv.io/asset/img/logo.png"
                  ]
                },
                "encoder": {
                  "title": "Encoder",
                  "description": "The encoder used to encode the image.",
                  "type": [
                    "string",
                    "null"
                  ],
                  "default": "image/webp",
                  "enum": [
                    "image/jpeg",
                    "image/webp"
                  ],
                  "examples": [
                    "image/webp",
                    "image/jpeg"
                  ]
                },
                "compression": {
                  "title": "Compression",
                  "description": "The compression used to encode the image.",
                  "type": [
                    "number",
                    "null"
                  ],
                  "minimum": 0,
                  "maximum": 1,
                  "default": 1,
                  "examples": [
                    0.8
                  ]
                },
                "width": {
                  "title": "Width",
                  "description": "Width of the image.",
                  "type": [
                    "integer",
                    "null"
                  ],
                  "minimum": 25,
                  "maximum": 10000,
                  "examples": [
                    500
                  ],
                  "vinv:unit": "Pixel",
                  "vinv:unitSymbol": "px"
                },
                "height": {
                  "title": "Height",
                  "description": "Height of the image",
                  "type": [
                    "integer",
                    "null"
                  ],
                  "minimum": 25,
                  "maximum": 10000,
                  "examples": [
                    500
                  ],
                  "vinv:unit": "Pixel",
                  "vinv:unitSymbol": "px"
                }
              }
            }
          }
        },
        "crown": {
          "type": [
            "object",
            "null"
          ],
          "title": "Crown",
          "description": "Crown definition",
          "required": [
            "dimensions"
          ],
          "properties": {
            "dimensions": {
              "title": "Crown Dimensions",
              "description": "Diameter per height",
              "type": "array",
              "items": {
                "title": "Diameter at height",
                "description": "Array including height and diameter at height",
                "type": [
                  "object",
                  "null"
                ],
                "minItems": 2,
                "maxItems": 2,
                "additionalItems": false,
                "required": [
                  "height",
                  "diameter"
                ],
                "properties": {
                  "height": {
                    "type": "number",
                    "title": "Height",
                    "description": "Height of tree in PERCENT where diameter is measured",
                    "minimum": 0.1,
                    "maximum": 1,
                    "examples": [
                      0.5,
                      0.1
                    ]
                  },
                  "diameter": {
                    "type": "number",
                    "title": "Diameter",
                    "description": "Diameter in CENTIMETER at measured height",
                    "minimum": 10,
                    "maximum": 100,
                    "examples": [
                      34,
                      38
                    ]
                  }
                }
              }
            },
            "image_crown": {
              "title": "Image of the trunk",
              "description": "Image of the trunk",
              "type": [
                "object",
                "null"
              ],
              "vinv:id": "https://schema.vinv.io/image/0.0.1.json",
              "required": [
                "uri"
              ],
              "properties": {
                "uri": {
                  "title": "Image",
                  "description": "A universal resource identifier (URI), according to RFC3986.",
                  "type": "string",
                  "format": "uri",
                  "examples": [
                    "https://schema.vinv.io/asset/img/logo.png"
                  ]
                },
                "encoder": {
                  "title": "Encoder",
                  "description": "The encoder used to encode the image.",
                  "type": [
                    "string",
                    "null"
                  ],
                  "default": "image/webp",
                  "enum": [
                    "image/jpeg",
                    "image/webp"
                  ],
                  "examples": [
                    "image/webp",
                    "image/jpeg"
                  ]
                },
                "compression": {
                  "title": "Compression",
                  "description": "The compression used to encode the image.",
                  "type": [
                    "number",
                    "null"
                  ],
                  "minimum": 0,
                  "maximum": 1,
                  "default": 1,
                  "examples": [
                    0.8
                  ]
                },
                "width": {
                  "title": "Width",
                  "description": "Width of the image.",
                  "type": [
                    "integer",
                    "null"
                  ],
                  "minimum": 25,
                  "maximum": 10000,
                  "examples": [
                    500
                  ],
                  "vinv:unit": "Pixel",
                  "vinv:unitSymbol": "px"
                },
                "height": {
                  "title": "Height",
                  "description": "Height of the image",
                  "type": [
                    "integer",
                    "null"
                  ],
                  "minimum": 25,
                  "maximum": 10000,
                  "examples": [
                    500
                  ],
                  "vinv:unit": "Pixel",
                  "vinv:unitSymbol": "px"
                }
              }
            }
          }
        },
        "birth": {
          "title": "Birthday",
          "description": "Birthday of the tree",
          "type": [
            "string",
            "null"
          ],
          "format": "date",
          "examples": [
            "2010-09-13"
          ]
        }
      }
    },
    "exemption": {
      "title": "Freistellung",
      "type": "boolean",
      "default": false,
      "examples": [
        false,
        true
      ]
    },
    "vitality": {
      "title": "Vitalitätsstufe",
      "type": "string",
      "default": "vital",
      "enum": [
        "vital",
        "leicht geschwächt",
        "geschwächt",
        "stark geschwächt"
      ],
      "examples": [
        "vital",
        "leicht geschwächt",
        "geschwächt",
        "stark geschwächt"
      ]
    },
    "root": {
      "title": "Wurzel",
      "description": "Root of the tree.",
      "type": "object",
      "required": [
        "raised_root_plate",
        "floor_cracks"
      ],
      "properties": {
        "raised_root_plate": {
          "title": "angehobener Wurzelteller",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "floor_cracks": {
          "title": "Bodenrisse",
          "description": "konzentrische Bodenrisse quer zur Wurzel (auch Wegedecken, Mauern usw.)",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "main_root_damage": {
          "title": "windseitige Hauptwurzelschäden",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "near_trunk_shafts": {
          "title": "stammnahe Schachtungen",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "backfill_root": {
          "title": "stammnahe Schachtungen",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "stilt_roots": {
          "title": "Stelzwurzeln",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "exposed_roots": {
          "title": "freigespülte Wurzeln",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "annotation": {
          "title": "Anmerkung",
          "type": "string",
          "maxLength": 500,
          "examples": [
            "Unterversorgtes Holzgewebe durch Behinderung oder Unterbrechung des Saftstroms."
          ]
        }
      }
    },
    "trunk": {
      "title": "Stammfuß und Stamm ",
      "description": "trunk foot and trunk",
      "type": "object",
      "required": [
        "misalignment",
        "juice_leakage"
      ],
      "properties": {
        "misalignment": {
          "title": "Schiefstellung",
          "description": "akutes Kippen",
          "type": [
            "object",
            "null"
          ],
          "properties": {
            "shear_crack": {
              "title": "mit Schubriss",
              "type": "boolean",
              "default": false,
              "examples": [
                false,
                true
              ]
            },
            "naked_triangle": {
              "title": "mit nacktem Dreieck",
              "type": "boolean",
              "default": false,
              "examples": [
                false,
                true
              ]
            },
            "round_trunk_cross_section": {
              "title": "mit rundem Stammquerschnitt",
              "type": "boolean",
              "default": false,
              "examples": [
                false,
                true
              ]
            },
            "straight_trunk_axis": {
              "title": "mit gerader Stammachse",
              "type": "boolean",
              "default": false,
              "examples": [
                false,
                true
              ]
            }
          },
          "additionalProperties": false
        },
        "juice_leakage": {
          "title": "Saftaustritt",
          "description": "dunkler Saftaustritt am Stammfuß",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "mushroom": {
          "title": "Pilzfruchtkörper",
          "description": "Zeitweise sichtbares Vermehrungsorgan eines Pilzes, der möglicherweise lebendes Holz zersetzt.",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "body_longitudinal_cracks": {
          "title": "Holzkörper Längsrisse",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "cracked_v-twin": {
          "title": "gerissener V-Zwiesel",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "cave": {
          "title": "Höhle",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "rib_pointed_nose": {
          "title": "spitznasige Längsrippe",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "thickening": {
          "title": "Verdickung",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "dead_bark": {
          "title": "tote Rinde",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "wound_rot": {
          "title": "Wunde mit Fäule",
          "type": [
            "object",
            "null"
          ],
          "properties": {
            "hollow": {
              "title": "mit Hohlklang",
              "type": "boolean",
              "default": false,
              "examples": [
                false,
                true
              ]
            }
          },
          "additionalItems": false
        },
        "capping": {
          "title": "Kappung",
          "type": [
            "object",
            "null"
          ],
          "required": [
            "height"
          ],
          "properties": {
            "height": {
              "title": "Höhe der Kappung",
              "description": "Baumzerstörende Einkürzung der Krone ohne Rücksicht auf die Wuchsform, Notmaßnahme zur Herstellung der Verkehrssicherheit. Geeignete Minderungsmaßnahme zur Entwicklung von Totholz-Lebensraum anstelle einer Fällung. Solange ein Totholzstumpf durch mögliches Umstürzen eine Verkehrsfläche erreichen kann, wird er der Regelkontrolle unterzogen.",
              "type": "number",
              "minimum": 0,
              "maximum": 100,
              "examples": [
                0,
                100
              ]
            },
            "deadwood_stump": {
              "title": "Totholzstumpf",
              "type": "boolean",
              "default": false,
              "examples": [
                false,
                true
              ]
            }
          },
          "additionalProperties": false
        },
        "annotation": {
          "title": "Anmerkung",
          "type": "string",
          "maxLength": 500,
          "examples": [
            "Unterversorgtes Holzgewebe durch Behinderung oder Unterbrechung des Saftstroms."
          ]
        }
      }
    },
    "crown": {
      "title": "Stamm",
      "description": "Stammfuß und Stamm",
      "type": "object",
      "required": [
        "mushroom"
      ],
      "properties": {
        "mushroom": {
          "title": "Pilzfruchtkörper",
          "description": "Zeitweise sichtbares Vermehrungsorgan eines Pilzes, der möglicherweise lebendes Holz zersetzt.",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "deadwood": {
          "title": "Totholz",
          "description": "(sicherheitsrelevant)",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "body_longitudinal_cracks": {
          "title": "Holzkörper Längsrisse",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "cracked_v-twin": {
          "title": "gerissener V-Zwiesel",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "cave": {
          "title": "Höhle",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "rib_pointed_nose": {
          "title": "spitznasige Längsrippe",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "thickening": {
          "title": "Verdickung",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "dead_bark": {
          "title": "tote Rinde",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "wound_rot": {
          "title": "Wunde mit Fäule",
          "type": "object",
          "properties": {
            "hollow": {
              "title": "mit Hohlklang",
              "type": "boolean",
              "default": false,
              "examples": [
                false,
                true
              ]
            }
          },
          "additionalItems": false
        },
        "loose_hanging_branch": {
          "title": "lose hängender Ast",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "breakdown": {
          "title": "Anbruch",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "annotation": {
          "title": "Anmerkung",
          "type": "string",
          "maxLength": 500,
          "examples": [
            "Unterversorgtes Holzgewebe durch Behinderung oder Unterbrechung des Saftstroms."
          ]
        }
      }
    },
    "action_required": {
      "title": "Handlungsbedarf",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "further_visual_inspection": {
          "title": "Weitere Sichtkontrolle",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "further_visual_inspection_comment": {
          "title": "Eingehende Untersuchung",
          "type": "boolean",
          "default": false,
          "examples": [
            false,
            true
          ]
        },
        "urgency": {
          "title": "Dringlichkeit",
          "type": "string",
          "enum": [
            "nicht dringend",
            "dringend",
            "sehr dringend"
          ],
          "examples": [
            "nicht dringend",
            "dringend",
            "sehr dringend"
          ]
        }
      }
    },
    "status": {
      "title": "Zustand",
      "type": "object",
