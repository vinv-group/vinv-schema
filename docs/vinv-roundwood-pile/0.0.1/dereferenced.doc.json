{
  "$id": "https://schema.vinv.io/vinv-roundwood-pile/0.0.1.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Roundwood Pile",
  "description": "Tree definition",
  "type": "object",
  "required": [
    "location",
    "trunks"
  ],
  "properties": {
    "location": {
      "$id": "https://schema.vinv.io/location/0.0.1.json",
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Location",
      "description": "",
      "type": "object",
      "vinv:id": "https://schema.vinv.io/location/0.0.1.json",
      "required": [
        "coordinates",
        "accuracy"
      ],
      "properties": {
        "coordinates": {
          "vinv:basics": "https://documentation.vinv.io/coordinates/0.0.1/0.html",
          "$id": "https://schema.vinv.io/coordinates/0.0.1.json",
          "$schema": "http://json-schema.org/draft-07/schema#",
          "title": "Coordinates",
          "description": "Anchor point of the Object on a map. Array of longitude, latitude and [altitude] coordinate. Reference system: WGS84 Web Mercator with longitude and latitude units of decimal degrees.",
          "type": "object",
          "required": [
            "longitude",
            "latitude"
          ],
          "additionalItems": false,
          "properties": {
            "longitude": {
              "title": "Longitude",
              "description": "The decimal east/west position of a point. (7 decimal places max)",
              "type": "number",
              "minimum": -180,
              "maximum": 180,
              "multipleOf": 1e-7,
              "examples": [
                -130.5627874,
                130.5627874
              ]
            },
            "latitude": {
              "title": "Latitude",
              "description": "The decimal north/south position of a point. (7 decimal places max)",
              "type": "number",
              "minimum": -90,
              "maximum": 90,
              "multipleOf": 1e-7,
              "examples": [
                -12.4563,
                50.5627874
              ]
            },
            "altitude": {
              "type": [
                "number",
                "null"
              ],
              "title": "Altitude",
              "description": "The altitude of the position in meters above mean sea level. (2 decimal places max)",
              "minimum": 0,
              "maximum": 2500,
              "multipleOf": 0.1,
              "vinv:unit": "Meter",
              "vinv:unitSymbol": "m",
              "examples": [
                0,
                130
              ]
            }
          }
        },
        "accuracy": {
          "title": "Accuracy",
          "description": "The decimal accuracy of coordinates in meter (2 decimal places max).",
          "type": "number",
          "minimum": 0,
          "maximum": 10000,
          "multipleOf": 0.1,
          "vinv:unit": "Meter",
          "vinv:unitSymbol": "m",
          "examples": [
            3,
            12
          ]
        },
        "geogrid": {
          "title": "Geo Grid",
          "description": "Geographical Aggregation Grid",
          "type": [
            "object",
            "null"
          ],
          "properties": {
            "h3": {
              "title": "h3-Location",
              "description": "Location of the event (h3 https://h3geo.org/)",
              "type": [
                "string",
                "null"
              ],
              "minLength": 15,
              "maxLength": 15,
              "examples": [
                "8428309ffffffff"
              ]
            },
            "geohash": {
              "title": "geohash-Location",
              "description": "Location of the event (geohash https://en.wikipedia.org/wiki/Geohash)",
              "type": [
                "string",
                "null"
              ],
              "minLength": 1,
              "maxLength": 12,
              "examples": [
                "ww8p1r4t8"
              ]
            }
          }
        }
      }
    },
    "trunks": {
      "title": "Trunks",
      "description": "Multiple trunk definition.",
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/trunk"
      }
    },
    "image_pile_front": {
      "title": "Image of the Pile front",
      "description": "Image of the trunk",
      "$id": "https://schema.vinv.io/image/0.0.1.json",
      "$schema": "http://json-schema.org/draft-07/schema#",
      "type": [
        "object",
        "null"
      ],
      "vinv:id": "https://schema.vinv.io/image/0.0.1.json",
      "required": [
        "uri"
      ],
      "properties": {
        "uri": {
          "title": "Image",
          "description": "A universal resource identifier (URI), according to RFC3986.",
          "type": "string",
          "format": "uri",
          "examples": [
            "https://schema.vinv.io/asset/img/logo.png"
          ]
        },
        "encoder": {
          "title": "Encoder",
          "description": "The encoder used to encode the image.",
          "type": [
            "string",
            "null"
          ],
          "default": "image/webp",
          "enum": [
            "image/jpeg",
            "image/webp"
          ],
          "examples": [
            "image/webp",
            "image/jpeg"
          ]
        },
        "compression": {
          "title": "Compression",
          "description": "The compression used to encode the image.",
          "type": [
            "number",
            "null"
          ],
          "minimum": 0,
          "maximum": 1,
          "default": 1,
          "examples": [
            0.8
          ]
        },
        "width": {
          "title": "Width",
          "description": "Width of the image.",
          "type": [
            "integer",
            "null"
          ],
          "minimum": 25,
          "maximum": 10000,
          "examples": [
            500
          ],
          "vinv:unit": "Pixel",
          "vinv:unitSymbol": "px"
        },
        "height": {
          "title": "Height",
          "description": "Height of the image",
          "type": [
            "integer",
            "null"
          ],
          "minimum": 25,
          "maximum": 10000,
          "examples": [
            500
          ],
          "vinv:unit": "Pixel",
          "vinv:unitSymbol": "px"
        }
      }
    }
  },
  "$defs": {
    "trunk": {
      "type": [
        "object",
        "null"
      ],
      "title": "Trunk definition",
      "description": "Trunk definition",
      "required": [
        "species",
        "dimensions"
      ],
      "properties": {
        "species": {
          "$id": "https://schema.vinv.io/species/0.0.1.json",
          "$schema": "http://json-schema.org/draft-07/schema#",
          "title": "Tree species",
          "description": "Tree Species values taken from https://github.com/b-lack/tree-species",
          "type": "string",
          "pattern": "^[a-zA-Z0-9_-]{3}$",
          "examples": [
            "JM2"
          ],
          "vinv:enum": "https://schema.vinv.io/species/0.0.1.json"
        },
        "dimensions": {
          "title": "Trunk Dimensions",
          "description": "Diameter per height",
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/dimension_at_height"
          }
        },
        "image_trunk": {
          "title": "Image of the trunk",
          "description": "Image of the trunk",
          "$ref": "#/properties/image_pile_front"
        }
      }
    },
    "dimension_at_height": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Diameter at height",
      "description": "Array including height and diameter at height",
      "type": [
        "object",
        "null"
      ],
      "minItems": 2,
      "maxItems": 2,
      "additionalItems": false,
      "properties": {
        "height": {
          "type": "number",
          "title": "Height",
          "description": "Height of tree in PERCENT where diameter is measured",
          "minimum": 0.1,
          "maximum": 1,
          "examples": [
            0.5,
            0.1
          ]
        },
        "diameter": {
          "type": "number",
          "title": "Diameter",
          "description": "Diameter in CENTIMETER at measured height",
          "minimum": 10,
          "maximum": 100,
          "examples": [
            34,
            38
          ]
        }
      }
    }
  }
}